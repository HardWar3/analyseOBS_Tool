<Window x:Class="analyseOBS_Tool.Analyzed"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:analyseOBS_Tool"
        mc:Ignorable="d"
        Title="Analyzed" Height="550" Width="650"
        MinHeight="550" MinWidth="650"
        >
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" MinWidth="1"/>
            <ColumnDefinition Width="1.4*" MinWidth="1.4"/>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Column="0">
            <TextBlock x:Name="cpu_textblock" Text="CPU: 90 %" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="50"/>
            <TextBlock x:Name="ram_textblock" Text="RAM: 90 %" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="50"/>
            <TextBlock x:Name="gpu_textblock" Text="GPU: 90 %" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="50"/>
        </StackPanel>
        <StackPanel Name="broadcasting_specs" Grid.Column="1" Margin="5">
        </StackPanel>
    </Grid>
</Window>